@{
    ViewData["Title"] = "Super Admin Dashboard";
}

<div class="container mt-5 text-center">
    <h1 class="mb-4">Welcome to the Super Admin Dashboard</h1>
    <p class="mb-5">Here you can manage all Super Admin functionalities.</p>

    <div class="row justify-content-center">
        <!-- Add New SubAdmin Button -->
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("CreateSubAdmin", "SuperAdmin")" class="btn btn-primary btn-lg w-100">
                Add New SubAdmin
            </a>
        </div>

        <!-- Manage SubAdmins Button -->
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("ManageSubAdmin", "SuperAdmin")" class="btn btn-secondary btn-lg w-100">
                Manage SubAdmins
            </a>
        </div>

        <!-- View All Tickets Button -->
        <div class="col-md-4 mb-3">
            <a href="@Url.Action("ViewTickets", "SuperAdmin")" class="btn btn-info btn-lg w-100">
                View All Tickets
            </a>
        </div>
    </div>
</div>
<style>
    body {
        background-color: antiquewhite;
    }
</style>